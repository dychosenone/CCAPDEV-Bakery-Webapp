<%- include('./partials/head.ejs'); %>
<body>
<div class="container-js">
    <%- include('./partials/header.ejs'); %>

    <section class="hero hero-header-background is-small">
        <div class="hero-body has-text-centered">
            <p class="hero-styling">Add Product</p>
        </div>
    </section>

    <div class="container" style="margin-top: 60px">
        <div class="product-photos align-items-center">
            <div>
                <button class="button submit-button is-small">ADD IMAGE</button><br>
                <button class="button submit-button is-small">REMOVE IMAGE</button>
            </div>
        </div>

        <form class="admin-edit-product" action="/admin/admin-product">
            <div class="has-text-justified" style="margin-left: 5%; margin-top: 40px;">
                <label style="margin-left: 4.4%">Product Name</label>
                <input type="text" class="input input-styled" style="width: 300px" ><br><br>
                <label>Product Description </label>
                <input type="text" class="input input-styled"  style="width: 500px" ><br><br>
            </div>

            <table class="table is-hoverable">
                <thead>
                <tr>
                    <th>Size</th>
                    <th>Price</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td><input type="text" class="input input-styled" size="11"></td>
                    <td><input type="number" class="input input-styled" ></td>
                    <td><button  type="button" class="button submit-button is-small">Remove</button></td>
                </tr>

                <tr><td><button type="button" class="button submit-button is-small">Add</button></td></tr>
                </tbody>
            </table>

            <div>
                <button class="button submit-button is-medium" style="margin-bottom: 10px; margin-left: 41.5%;" >Add Product</button>
            </div>

        </form>



    </div>

    <%- include('./partials/footer.ejs'); %>


</div>
</body>
</html>