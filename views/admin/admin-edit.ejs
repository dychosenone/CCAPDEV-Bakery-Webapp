<%- include('./partials/head.ejs'); %>
<body>
<div class="container-js">
    <%- include('./partials/header.ejs'); %>

    <section class="hero hero-header-background is-small">
        <div class="hero-body has-text-centered">
            <p class="hero-styling">Admin Credentials</p>
        </div>
    </section>

    <div class="container" style="margin-top: 60px; margin-bottom: 40px">
        <% if(error != null) { %>
            <% error.forEach(function(element) { %>
            <div class="notification is-danger">
                <p><%=element.msg%></p>
            </div>
            <% }) %>
        <% } %>
        <form class="admin-edit-account" method="post">
            <div class="has-text-justified" style="margin-left: 5%; margin-top: 40px;">
                <label style="margin-left: 20.6%;"><b>Password</b></label>
                <input type="password" name="password" class="input input-styled" style="width: 300px" required><br><br>

                <button type="submit" name="submit" class="button submit-button" style="margin-bottom: 10px; margin-left: 41.5%;">Save</button>
            </div>
        </form>
    </div>

    <%- include('./partials/footer.ejs'); %>

</div>
</body>
</html>