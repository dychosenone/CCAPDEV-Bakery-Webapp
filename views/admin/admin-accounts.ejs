<%- include('./partials/head.ejs'); %>
<body>
<div class="container-js">
    <%- include('./partials/header.ejs'); %>

    <section class="hero hero-header-background is-small">
        <div class="hero-body has-text-centered">
            <p class="hero-styling">User Account List</p>
        </div>
    </section>

    <div class="container mt-6">
        <form>
            <div class="field has-addons search-field">
                <input class="input input-styled" type="text" placeholder="Search">
                <div class="control"><button class="button submit-button">Search</button></div>
            </div>
        </form>
    </div>

    <div class="container" style="margin-top: 60px; margin-bottom: 40px">
        <table class="table table-hover admin-account-table" >
            <thead>
            <tr>
                <th>Username</th>
                <th>Name</th>
                <th>Address</th>
                <th>Contact Number</th>
            </tr>
            </thead>
            <tbody>
            <% result.forEach(function(element) { %>
            <tr>
                <td><%=element.username%></td>
                <td><%=element.fullName%></td>
                <td><%=element.billingAddress%></td>
                <td>
                    <%=element.contact%><br>
                    <%=element.alternativeContact%>
                </td>
                <td>
                    <a href="edit-account/user1.html" class="button submit-button is-small">Edit</a>
                </td>
                <td>
                    <button class="button submit-button is-small">Delete</button>
                </td>
            </tr>
            <% });%>
            </tbody>

        </table>
        <a href="/admin/admin-add-account" class="button submit-button is-medium" style="margin-left: 13%">Add New User Account</a>
    </div>

    <%- include('./partials/footer.ejs'); %>

</div>
</body>
</html>